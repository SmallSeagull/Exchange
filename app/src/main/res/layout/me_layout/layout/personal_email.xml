<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/global_deep_background"
    >

    <!--邮箱界面标题-->
    <LinearLayout
        android:id="@+id/llt_Email_title"
        android:layout_width="360dp"
        android:layout_height="61dp"
        android:background="@color/trading_backgrou"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_Email_left"
                android:layout_width="@dimen/wallet_title_width"
                android:layout_height="@dimen/wallet_title_height"
                android:layout_marginBottom="@dimen/wallet_title_marginBottom"
                android:layout_marginLeft="@dimen/wallet_title_marginLeft"
                android:layout_marginTop="@dimen/wallet_title_marginTop"
                android:src="@mipmap/ic_home_return" />


            <TextView
                android:layout_width="82dp"
                android:layout_height="26dp"
                android:layout_marginBottom="13dp"
                android:layout_marginLeft="146dp"
                android:layout_marginTop="25dp"
                android:gravity="center_horizontal"
                android:text="邮箱"
                android:textColor="@color/global_white"
                android:textSize="20dp" />

        </RelativeLayout>

    </LinearLayout>

    <!--邮箱中间界面布局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <!--tab栏-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_Email_confirm"
                android:layout_width="96dp"
                android:layout_height="18dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="10dp"
                android:text="邮箱确认"
                android:gravity="center"
                android:textColor="@color/global_white"
                />
            <TextView
                android:id="@+id/tv_Email_change"
                android:layout_width="96dp"
                android:layout_height="18dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="修改邮箱"
                android:gravity="center"
                android:textColor="@color/global_white"
                />
            <TextView
                android:id="@+id/tv_Email_change_success"
                android:layout_width="96dp"
                android:layout_height="18dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="修改成功"
                android:gravity="center"
                android:textColor="@color/global_white"
                />
            
        </LinearLayout>

        <!--滑动条-->
        <View
            android:id="@+id/view_cursor"
            android:layout_width="90dp"
            android:layout_height="2dp"
            android:layout_marginLeft="15dp"
            android:background="@color/global_white"
            />

        <!--ViewPage布局-->
        <android.support.v4.view.ViewPager
            android:id="@+id/viewPage_Email"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>



        
    </LinearLayout>








</LinearLayout>
