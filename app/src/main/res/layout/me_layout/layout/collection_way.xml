<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/llt_Add_main"
    >

    <!--收款标题-->
    <LinearLayout
        android:id="@+id/llt_Collection_way_title"
        android:layout_width="360dp"
        android:layout_height="61dp"
        android:background="@color/trading_backgrou"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_Collection_way_left"
                android:layout_width="@dimen/wallet_title_width"
                android:layout_height="@dimen/wallet_title_height"
                android:layout_marginBottom="@dimen/wallet_title_marginBottom"
                android:layout_marginLeft="@dimen/wallet_title_marginLeft"
                android:layout_marginTop="@dimen/wallet_title_marginTop"
                android:src="@mipmap/ic_home_return" />


            <TextView
                android:layout_width="67dp"
                android:layout_height="25dp"
                android:layout_marginBottom="13dp"
                android:layout_marginLeft="147dp"
                android:layout_marginTop="25dp"
                android:text="@string/Collection_way"
                android:textColor="@color/trading_title_in"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/img_Collection_way_plus"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="320dp"
                android:layout_marginTop="26dp"
                android:src="@mipmap/ic_me_collection_plus" />
        </RelativeLayout>

    </LinearLayout>

    <!--收款方式主页内容-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="345dp"
                android:layout_height="88dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="这是收款方式内容" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
