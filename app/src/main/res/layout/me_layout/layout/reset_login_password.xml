<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_deep_background"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/llt_reset_login_Ps_title"
            android:layout_width="360dp"
            android:layout_height="61dp"
            android:background="@color/trading_backgrou"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_reset_login_Ps_left"
                    android:layout_width="@dimen/wallet_title_width"
                    android:layout_height="@dimen/wallet_title_height"
                    android:layout_marginBottom="@dimen/wallet_title_marginBottom"
                    android:layout_marginLeft="@dimen/wallet_title_marginLeft"
                    android:layout_marginTop="@dimen/wallet_title_marginTop"
                    android:src="@mipmap/ic_home_return" />


                <TextView
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="13dp"
                    android:layout_marginLeft="125dp"
                    android:layout_marginTop="25dp"
                    android:text="重置登录密码"
                    android:textColor="@color/trading_title_in"
                    android:textSize="18dp" />

            </RelativeLayout>

        </LinearLayout>

        <!--重置登录密码底部布局-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/llt_reset_login_Ps_title"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <!--修改密码栏-->
                <LinearLayout
                    android:id="@+id/llt_reset_login_Ps"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/me_border"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="13dp"
                        android:gravity="center_vertical"
                        android:hint="修改密码"
                        android:textColorHint="@color/global_shallow_gray"
                        android:textSize="15dp" />


                </LinearLayout>

                <!--确认修改密码栏-->
                <LinearLayout
                    android:id="@+id/llt_Confirm_reset_login_Ps"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:layout_below="@+id/llt_reset_login_Ps"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/me_border"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="13dp"
                        android:gravity="center_vertical"
                        android:hint="确认修改密码"
                        android:textColorHint="@color/global_shallow_gray"
                        android:textSize="15dp" />


                </LinearLayout>

                <!--获取验证码-->
                <LinearLayout
                    android:id="@+id/llt_get_code"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:layout_below="@+id/llt_Confirm_reset_login_Ps"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/me_border"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="53dp">

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="24dp"
                            android:layout_marginLeft="17dp"
                            android:layout_marginTop="13dp"
                            android:gravity="center_vertical"
                            android:hint="确认修改密码"
                            android:textColorHint="@color/global_shallow_gray"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_send_code"
                            android:layout_width="76dp"
                            android:layout_height="16dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="11dp"
                            android:layout_marginTop="16dp"
                            android:text="发送验证码"
                            android:textColor="@color/global_blue"
                            android:textSize="14dp" />

                        <View
                            android:layout_width="72dp"
                            android:layout_height="1dp"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/tv_send_code"
                            android:layout_marginRight="16dp"
                            android:background="@color/global_blue" />


                    </RelativeLayout>

                </LinearLayout>

                <!--设置按钮-->

                <Button
                    android:id="@+id/btn_Set_login_Ps"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="6dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/me_border"
                    android:text="设置"
                    android:textColor="@color/global_blue"
                    android:textSize="14dp" />


            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>

</LinearLayout>
