<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--交易页面标题栏-->
        <include layout="@layout/trading_title"
            android:id="@+id/llt_trading_title"
            />

        <LinearLayout
            android:id="@+id/llt_trading_center_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/llt_trading_title"
            android:background="#151935"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_trading_BTC"
                        android:layout_width="80dp"
                        android:layout_height="18dp"
                        android:gravity="center_vertical"
                        android:text="BTC/USDT"
                        android:textColor="@color/trading_white"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tv_trading_money"
                        android:layout_width="56dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="12dp"
                        android:layout_toRightOf="@+id/tv_trading_BTC"
                        android:text="6000.00"
                        android:textColor="@color/trading_white"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="18dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="12dp"
                        android:text="+20%"
                        android:textColor="#ffff6464"
                        android:textSize="16dp" />
                </RelativeLayout>
            </LinearLayout>
            <!--可用 BTC-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="@dimen/trading_center_marginTop"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_trading_canuse"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:text="可用"
                    android:textColor="@color/trading_white"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/tv_trading_canuse_money"
                    android:layout_width="80dp"
                    android:layout_height="18dp"
                    android:gravity="center_horizontal"
                    android:text="6000.00"
                    android:textColor="@color/trading_white"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="BTC"
                    android:textColor="@color/trading_white"
                    android:textSize="18dp" />


            </LinearLayout>

            <!--买入价（USDT）-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="@dimen/trading_center_marginTop"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_trading_USDT"
                    android:layout_width="160dp"
                    android:layout_height="22dp"
                    android:text="买入价（USDT）"
                    android:textColor="@color/trading_white"
                    android:textSize="18dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="@dimen/trading_center_marginTop"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/llt_view_money"
                        android:layout_width="192dp"
                        android:layout_height="33dp"
                        android:background="@drawable/trading_content_border"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_USDT_money"
                            android:layout_width="192dp"
                            android:layout_height="33dp"
                            android:layout_marginLeft="17dp"
                            android:gravity="center_vertical"
                            android:text="6000.00"
                            android:textColor="@color/trading_gray" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_Usdt_money"
                        android:layout_width="120dp"
                        android:layout_height="33dp"
                        android:layout_marginLeft="28dp"
                        android:layout_toRightOf="@+id/llt_view_money"
                        android:gravity="center_vertical"
                        android:text="~$4000.00"
                        android:textColor="@color/trading_white"
                        android:textSize="18dp" />
                </RelativeLayout>
            </LinearLayout>

            <!--数量（BTC）-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="@dimen/trading_center_marginTop"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_trading_amount"
                    android:layout_width="160dp"
                    android:layout_height="20dp"
                    android:text="数量（BTC）"
                    android:textColor="@color/trading_white"
                    android:textSize="18dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="@dimen/trading_center_marginTop"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/llt_trading_amount"
                        android:layout_width="192dp"
                        android:layout_height="33dp"
                        android:background="@drawable/trading_content_border"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_BTC_4"
                            android:layout_width="192dp"
                            android:layout_height="33dp"
                            android:layout_marginLeft="17dp"
                            android:gravity="center_vertical"
                            android:text="0.0"
                            android:textColor="@color/trading_gray"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_BTC_right"
                        android:layout_width="120dp"
                        android:layout_height="33dp"
                        android:layout_marginLeft="28dp"
                        android:layout_toRightOf="@+id/llt_trading_amount"
                        android:gravity="center_vertical"
                        android:text="1/4  1/2  全部"
                        android:textColor="@color/trading_white"
                        android:textSize="18dp" />
                </RelativeLayout>
            </LinearLayout>

            <!--预计交易额-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="@dimen/trading_center_marginTop"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/llt_expect_trading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tv_expect_trading"
                        android:layout_width="80dp"
                        android:layout_height="22dp"
                        android:text="预计交易额"
                        android:textColor="@color/trading_white"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/tv_expect_trading_money"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginLeft="2dp"
                        android:gravity="center_horizontal"
                        android:text="0.0000000"
                        android:textColor="@color/trading_white"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginLeft="12dp"
                        android:text="USDT"
                        android:textColor="@color/trading_white"
                        android:textSize="18dp" />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_trading_buy_in"
                    android:layout_width="325dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_below="@+id/llt_expect_trading"
                    android:text="买入"
                    android:background="@drawable/trading_content_btn_border"
                    android:textSize="20dp"
                    android:textColor="@color/trading_white"
                    />
                </RelativeLayout>

            </LinearLayout>


            <!--++++++++++++++++++++++++++++++++++++-->


        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
