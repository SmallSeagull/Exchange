                <ImageView
                    android:id="@+id/img_trading"
                    android:layout_width="@dimen/frame_img_width"
                    android:layout_height="@dimen/frame_img_height"
                    android:layout_marginBottom="@dimen/frame_img_text_distance"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/fragment_trading_page" />

                <TextView
                    android:id="@+id/tv_trading"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/frame_text_height"
                    android:layout_below="@+id/img_trading"
                    android:text="@string/framelayout_deal"
                    android:textColor="@drawable/navigation_text_color"
                    android:textSize="@dimen/frame_text_size" />
            </RelativeLayout>

        </LinearLayout>

