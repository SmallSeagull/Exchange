    <FrameLayout
        android:id="@+id/flt_menu_navigation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/framelayout_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@color/home_backgrou">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp">



        <!--首页-->
        <LinearLayout
            android:id="@+id/llt_home"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginBottom="@dimen/layout_marginBottom"
            android:layout_marginLeft="36dp"
            android:gravity="center"
            android:layout_marginTop="@dimen/layout_marginTop"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_home"
                    android:layout_width="@dimen/frame_img_width"
                    android:layout_height="@dimen/frame_img_height"
                    android:layout_marginBottom="@dimen/frame_img_text_distance"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/fragment_home_page" />

                <TextView
                    android:id="@+id/tv_home"
                    android:layout_width="@dimen/frame_text_width"
                    android:layout_height="@dimen/frame_text_height"
                    android:layout_below="@+id/img_home"
                    android:text="@string/framelayout_home"
                    android:textColor="@drawable/navigation_text_color"
                    android:textSize="@dimen/frame_text_size" />
            </RelativeLayout>

        </LinearLayout>

        <!--交易-->
        <LinearLayout
            android:id="@+id/llt_trading"
            android:layout_width="50dp"
            android:layout_height="44dp"
