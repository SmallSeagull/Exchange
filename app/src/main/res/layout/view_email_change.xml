<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_deep_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--输入新邮箱地址栏-->
        <LinearLayout
            android:id="@+id/llt_Email_change_address"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/email_border"
            android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_Email_address"
                    android:layout_width="160dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="11dp"
                    android:layout_marginTop="14dp"
                    android:hint="请输入新邮箱地址"
                    android:textColorHint="@color/global_gray"
                    android:textSize="12dp" />


        </LinearLayout>

        <!--请求倒计时栏-->
        <LinearLayout
            android:id="@+id/llt_Email_change"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/llt_Email_change_address"
            android:background="@drawable/email_border"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_Email_time"
                    android:layout_width="100dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="11dp"
                    android:layout_marginTop="14dp"
                    android:text="43秒后重新发送"
                    android:textColor="@color/global_blue"
                    android:textSize="12dp" />
            </RelativeLayout>

        </LinearLayout>


        <Button
            android:id="@+id/btn_Email_change_next"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/email_border"
            android:text="下一步"
            android:textColor="@color/global_blue"
            />

    </RelativeLayout>
</LinearLayout>
