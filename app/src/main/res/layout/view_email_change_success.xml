<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_deep_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llt_Email_change_success"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/email_border"
            android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_Email_success_Address"
                    android:layout_width="160dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="11dp"
                    android:layout_marginTop="14dp"
                    android:text="9210**25qq.com"
                    android:textColor="@color/global_gray"
                    android:textSize="12dp" />


        </LinearLayout>


        <Button
            android:id="@+id/btn_Email_change_success_"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/email_border"
            android:text="完成"
            android:textColor="@color/global_blue"
            />

    </RelativeLayout>
</LinearLayout>
