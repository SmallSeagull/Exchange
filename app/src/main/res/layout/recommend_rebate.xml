<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llt_recommend_title"
        android:layout_width="360dp"
        android:layout_height="61dp"
        android:background="@color/trading_backgrou"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_recommend_left"
                android:layout_width="@dimen/wallet_title_width"
                android:layout_height="@dimen/wallet_title_height"
                android:layout_marginBottom="@dimen/wallet_title_marginBottom"
                android:layout_marginLeft="@dimen/wallet_title_marginLeft"
                android:layout_marginTop="@dimen/wallet_title_marginTop"
                android:src="@mipmap/ic_home_return" />


            <TextView
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginBottom="13dp"
                android:layout_marginLeft="146dp"
                android:layout_marginTop="25dp"
                android:text="@string/recommend_title_text"
                android:textColor="@color/trading_title_in"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_title_share"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="320dp"
                android:layout_marginTop="26dp"
                android:text="@string/recommend_title_share"
                android:textColor="@color/global_white"
                android:textSize="14dp" />
        </RelativeLayout>

    </LinearLayout>

    <!--推荐好友领福利-->
    
    <LinearLayout
        android:id="@+id/llt_recommend_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/llt_recommend_title"
        android:orientation="vertical"
        android:background="@mipmap/ic_me_background"
        >
        
        <ImageView
            android:layout_width="211dp"
            android:layout_height="25dp"
            android:layout_marginLeft="74dp"
            android:layout_marginTop="36dp"
            android:src="@mipmap/ic_zi"
            />
        <LinearLayout
            android:layout_width="298dp"
            android:layout_height="394dp"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/recommend_code_border"
            >

            <TextView
                android:id="@+id/tv_my_recommend_code"
                android:layout_width="90dp"
                android:layout_height="16dp"
                android:layout_marginLeft="103dp"
                android:layout_marginTop="30dp"
                android:text="@string/my_recommend_code"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="56dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="109dp"
                    android:text="yt1653"
                    />
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="12dp"
                    android:src="@mipmap/ic_me_c_copy"
                    />
            </LinearLayout>

            <ImageView
                android:layout_width="139dp"
                android:layout_height="139dp"
                android:layout_marginLeft="79dp"
                android:layout_marginTop="15dp"
                android:src="@mipmap/ic_me_erm"
                />
            <TextView
                android:layout_width="85dp"
                android:layout_height="12dp"
                android:text="@string/long_press_save"
                android:layout_marginLeft="106dp"
                android:layout_marginTop="6dp"
                android:textSize="10dp"
                />
            <TextView
                android:layout_width="91dp"
                android:layout_height="20dp"
                android:layout_marginLeft="103dp"
                android:layout_marginTop="20dp"
                android:text="@string/my_recommend_link"
                android:textSize="15dp"
                />
            <TextView
                android:layout_width="252dp"
                android:layout_height="15dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="16dp"
                android:text="http://image.baidu.com/search/datail?ct"
                android:textSize="12dp"
                />
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="142dp"
                android:layout_marginTop="15dp"
                android:src="@mipmap/ic_me_c_copy"
                />
        </LinearLayout>
        
    </LinearLayout>

</RelativeLayout>
