<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/global_deep_background"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_future_exchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="88dp"
            android:src="@mipmap/future_logo_login"
            />

        <TextView
            android:id="@+id/tv_future_exchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="76dp"
            android:layout_marginTop="53dp"
            android:layout_below="@+id/img_future_exchange"
            android:text="未来FTE交易所"
            android:textColor="@color/global_white"
            android:textSize="30dp"
            />

    </RelativeLayout>



</LinearLayout>
