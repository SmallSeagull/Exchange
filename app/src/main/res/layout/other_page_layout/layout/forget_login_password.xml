<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_deep_background"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="132dp"
        android:layout_marginRight="132dp"
        android:layout_marginTop="65dp"
        android:src="@mipmap/future_logo_login" />

    <LinearLayout
        android:layout_width="317dp"
        android:layout_height="387dp"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/other_page_background"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="317dp"
            android:layout_height="387dp">

            <!--重置密码输入手机号栏-->
            <ImageView
                android:id="@+id/img_reset_phone"
                android:layout_width="15dp"
                android:layout_height="16dp"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="34dp"
                android:src="@mipmap/ic_account" />

            <View
                android:id="@+id/view_reset_phone"
                android:layout_width="278dp"
                android:layout_height="1dp"
                android:layout_below="@+id/img_reset_phone"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="5dp"
                android:background="@color/global_shallow_gray" />

            <TextView
                android:id="@+id/tv_reset_right"
                android:layout_width="28dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="9dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="34dp"
                android:text="+86"
                android:textColor="@color/global_shallow_gray"
                android:textSize="14dp" />

            <!--重置密码获取验证码栏-->
            <ImageView
                android:id="@+id/img_reset_auth_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_reset_phone"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="44dp"
                android:src="@mipmap/ic_code" />


            <View
                android:id="@+id/view_reset_auth_code"
                android:layout_width="278dp"
                android:layout_height="1dp"
                android:layout_below="@+id/img_reset_auth_code"
                android:layout_marginLeft="19dp"
                android:background="@color/global_shallow_gray" />

            <TextView
                android:id="@+id/tv_reset_auth_code"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/view_reset_phone"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="44dp"
                android:text="获取验证码"
                android:textColor="@color/global_blue"
                android:textSize="12dp" />

            <!--重置登录密码栏-->
            <ImageView
                android:id="@+id/img_reset_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_reset_auth_code"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="44dp"
                android:src="@mipmap/ic_password_reset" />

            <TextView
                android:id="@+id/tv_reset_password"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_alignBottom="@+id/img_reset_password"
                android:layout_marginLeft="56dp"
                android:layout_marginTop="48dp"
                android:hint="重置登录密码"
                android:textColorHint="@color/global_shallow_gray"
                android:textSize="12dp" />

            <View
                android:id="@+id/view_reset_password"
                android:layout_width="278dp"
                android:layout_height="1dp"
                android:layout_below="@+id/img_reset_password"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="5dp"
                android:background="@color/global_shallow_gray" />

            <!--重置密码确认密码栏-->
            <ImageView
                android:id="@+id/img_confirm_reset_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_reset_password"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="44dp"
                android:src="@mipmap/ic_password_reset" />

            <TextView
                android:id="@+id/tv_confirm_reset_password"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_alignBottom="@+id/img_confirm_reset_password"
                android:layout_marginLeft="56dp"
                android:layout_marginTop="48dp"
                android:hint="确认新密码"
                android:textColorHint="@color/global_shallow_gray"
                android:textSize="12dp" />

            <View
                android:id="@+id/view_confirm_reset_password"
                android:layout_width="278dp"
                android:layout_height="1dp"
                android:layout_below="@+id/img_confirm_reset_password"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="5dp"
                android:background="@color/global_shallow_gray" />

            <!--确认修改按钮-->

            <Button
                android:id="@+id/btn_reset"
                android:layout_width="267dp"
                android:layout_height="36dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="47dp"
                android:layout_marginRight="25dp"
                android:layout_below="@+id/view_confirm_reset_password"
                android:background="@drawable/other_page_btn_border"
                android:text="确认修改"
                android:textSize="16dp"
                />
            


        </RelativeLayout>


    </LinearLayout>

</LinearLayout>
